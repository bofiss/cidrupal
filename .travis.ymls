language: php
php:
  - 5.6

env:
  global:
    - DATABASE='cidrupal'
    - DB_USERNAME='root'
    - DB_ENCODE='utf8'

sudo: required
mysql:
  database: $DATABASE
  username: $DB_USERNAME
  encoding: $DB_ENCODE

before_install:
  - composer self-update
  - pear channel-discover pear.drush.org
  - export BASEDIR=${PWD}

install:
  - phpenv rehash
  - pear install drush/drush
  - composer install

before_script:
  - echo "sendmail_path='true'" >> `php --ini | grep "Loaded Configuration" | awk '{print $4}'`
  - drush make -y --force-complete drupal.make html
  - cd html
  - drush si -y standard --db-url=mysql://$DB_USERNAME@localhost/$DATABASE --db-su='root' --db-su-pw='' --account-name=admin --account-pass=admin
  - drush --yes site-install minimal --db-url="mysql://$DB_USERNAME@127.0.0.1/$DATABASE"
  - drush --yes en simpletest
  - cd ..
  - until netstat -an 2>/dev/null | grep '8080.*LISTEN'; do sleep 0.2; done

script:
  - $BASEDIR/vendor/bin/behat
